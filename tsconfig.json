{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es6",
    "allowJs": false, //allow js files to compile
    "moduleResolution": "node", //figuring out what imports refers to node or classic
    "target": "es5",
    "jsx": "react",//emit .js files others are react-native or preserve (.jsx)
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true //keep the original file as well while debuggng it will be easy
  },
  "include": ["src/**/*", "test/**/*"], //compile these files
  "exclude": ["node_modules"] //exclude these files from compilation
}
